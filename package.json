{
  "name": "fling",
  "version": "0.0.1",
  "description": "a not-so serious Farcaster client for the terminal",
  "author": "Charlie Harrington (@whatrocks)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whatrocks/fling.git"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "ora": "^6.1.2"
  },
  "scripts": {
    "build": "tsc --noEmit ./src/index.ts && esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js",
    "prepare": "husky install"
  },
  "lint-staged":{
    "**/*.{ts,tsx}":[
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "bin": {
    "fling": "./dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "esbuild": "^0.17.11",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
